#!/usr/bin/env just --justfile

@_default:
  just --list

# Install project dependencies
install:
  #!/usr/bin/env bash
  python -m venv env
  source env/bin/activate
  pip install -r requirements.txt

# Run the tests
test:
  #!/usr/bin/env bash
  source env/bin/activate
  molecule test

# Run the app
run:
  #!/usr/bin/env bash
  source env/bin/activate
  molecule converge

# Clean generated files
clean:
  #!/usr/bin/env bash
  source env/bin/activate
  molecule destroy
  rm -rf env
